# /etc/profile: system-wide .profile file for sh.

PATH="/usr/local/bin:/usr/bin:/bin"
LD_LIBRARY_PATH="/usr/local/lib:/usr/lib:/lib"

HOSTNAME="$(hostname)"

#Set the prompt 
PS1="$HOSTNAME$ " 

#Set the desired editor (e3ne, e3em, e3pi, e3vi, e3ws)
EDITOR=vi

umask 022

alias dir="ls"
alias vdir="ls -l"
alias ll="ls -l"
alias d="ls"
alias v="ls -l"
alias da="ls -a"
alias va="ls -la"

alias m="more"
alias +="more"

alias lo="exit"

alias w="uptime; who"

export PATH LD_LIBRARY_PATH HOSTNAME PS1 EDITOR

echo
echo "Type in help if you are really lost"
# echo
